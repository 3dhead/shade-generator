{
  "name": "shade-generator",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.13.0",
    "clipboard-polyfill": "^2.8.6",
    "color": "^3.1.2",
    "color-name-list": "^5.20.0",
    "firebase": "^7.14.3",
    "nearest-color": "^0.4.4",
    "node-sass": "^4.14.1",
    "parse-color": "^1.0.0",
    "react": "^16.13.1",
    "react-browser-hooks": "^2.2.4",
    "react-dom": "^16.13.1",
    "react-ga": "^2.7.0",
    "react-scripts": "^3.4.1",
    "react-tippy": "^1.3.4",
    "typeface-nunito": "^1.1.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "prettier --write \"src/**/**.{js,ts,css,less,scss,vue,json,gql,md}\"",
    "predeploy": "npm install && npm run prettify && npm run build",
    "deploy": "npm run predeploy && firebase deploy",
    "lint": "eslint --ext .js --ext .jsx .",
    "clean-install": "rm -rf node_modules && rm -f package-lock.json && npm i"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1"
  }
}
